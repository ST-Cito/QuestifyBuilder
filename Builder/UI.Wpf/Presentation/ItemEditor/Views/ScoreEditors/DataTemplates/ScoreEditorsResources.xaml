<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:behaviors="clr-namespace:Questify.Builder.UI.Wpf.Presentation.Behaviors">

    <Style x:Key="EditCasSolution" TargetType="{x:Type TextBox}">
        <Setter Property="behaviors:FloatingNumericTextBoxBehavior.IsEnabled" Value="True" />
    </Style>

    <DataTemplate x:Key="HeaderCasVariable">
        <Label Content="{StaticResource ItemEditor.ScoreEditor.CasEditor.Label}" />
    </DataTemplate>

    <DataTemplate x:Key="HeaderCasSolution">
        <Label Content="{Binding Path=.}" ContentStringFormat="{StaticResource ItemEditor.ScoreEditor.CasEditor.SolutionNR}" />
    </DataTemplate>
    
</ResourceDictionary>